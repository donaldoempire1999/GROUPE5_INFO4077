<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetAddHasScreened"
    >
    <ScrollView
        android:id="@+id/registerHasScreenedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/registerHasScreenedConstraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >
            <LinearLayout
                android:id="@+id/topSpace"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="vertical"
                />
            <TextView
                android:id="@+id/registerHasScreened"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Depister un citoyen"
                android:maxLines="2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/topSpace"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/ripple_hasscreened"
                />
            <RelativeLayout
                android:id="@+id/registerHasScreenedRelativeCitizen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerHasScreened"
                >
                <TextView
                    android:id="@+id/registerHasScreenedCitizenTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="Citoyen :   "
                    android:layout_centerVertical="true"
                    />
                <Spinner
                    android:id="@+id/registerHasScreenedCitizen"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/registerHasScreenedCitizenTitle"
                    android:layout_toEndOf="@+id/registerHasScreenedCitizenTitle"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/registerHasScreenedRelativeStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerHasScreenedRelativeCitizen"
                >
                <TextView
                    android:id="@+id/registerHasScreenedStatusTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="Statut :   "
                    android:layout_centerVertical="true"
                    />
                <Spinner
                    android:id="@+id/registerHasScreenedStatus"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/registerHasScreenedStatusTitle"
                    android:layout_toEndOf="@+id/registerHasScreenedStatusTitle"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/registerHasScreenedRelativeType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerHasScreenedRelativeStatus"
                >
                <TextView
                    android:id="@+id/registerHasScreenedTypeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="Type :   "
                    android:layout_centerVertical="true"
                    />
                <Spinner
                    android:id="@+id/registerHasScreenedType"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/registerHasScreenedTypeTitle"
                    android:layout_toEndOf="@+id/registerHasScreenedTypeTitle"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/registerHasScreenedRelativeRegion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerHasScreenedRelativeType"
                >
                <TextView
                    android:id="@+id/registerHasScreenedRegionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="Region :   "
                    android:layout_centerVertical="true"
                    />
                <Spinner
                    android:id="@+id/registerHasScreenedRegion"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/registerHasScreenedRegionTitle"
                    android:layout_toEndOf="@+id/registerHasScreenedRegionTitle"
                    />
            </RelativeLayout>
            <EditText
                android:id="@+id/registerHasScreenedDepartment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/edit_text_light_background"
                android:inputType="text"
                android:hint="Departement"
                tools:ignore="UnusedAttribute"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerHasScreenedRelativeRegion"
                />
            <EditText
                android:id="@+id/registerHasScreenedQuarter"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/edit_text_light_background"
                android:inputType="text"
                android:hint="Quartier"
                tools:ignore="UnusedAttribute"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerHasScreenedDepartment"
                />
            <EditText
                android:id="@+id/registerHasScreenedCity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/edit_text_light_background"
                android:inputType="text"
                android:hint="Ville"
                tools:ignore="UnusedAttribute"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerHasScreenedQuarter"
                />
            <TextView
                android:id="@+id/registerHasScreenedError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerHasScreenedCity"
                android:text="citoyen deja enregistre"
                android:textColor="@color/red"
                android:ellipsize="end"
                android:maxLines="1"
                android:visibility="invisible"
                android:padding="10dp"
                />
            <LinearLayout
                android:id="@+id/registerHasScreenedButtonsRelative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/registerHasScreenedError"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="center"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/registerHasScreenedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/transparent"
                    >
                    <RelativeLayout
                        android:id="@+id/registerHasScreenedButtonClick"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_hascreened"
                        android:clickable="true"
                        android:focusable="true"
                        >
                        <TextView
                            android:id="@+id/registerHasScreenedButtonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Enregistrer"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/white"
                            android:textStyle="normal"
                            android:maxLines="1"
                            android:ellipsize="end"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/registerHasScreenedButtonCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/transparent"
                    android:layout_centerHorizontal="true"
                    app:layout_constraintLeft_toRightOf="@+id/registerHasScreenedButton"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    >
                    <RelativeLayout
                        android:id="@+id/registerHasScreenedButtonCancelClick"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_light_red"
                        android:clickable="true"
                        android:focusable="true"
                        >
                        <TextView
                            android:id="@+id/registerHasScreenedButtonCancelText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Annuler"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/white"
                            android:textStyle="normal"
                            android:maxLines="1"
                            android:ellipsize="end"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/bottomSpace"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@+id/registerHasScreenedButtonsRelative"
                android:orientation="vertical"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>