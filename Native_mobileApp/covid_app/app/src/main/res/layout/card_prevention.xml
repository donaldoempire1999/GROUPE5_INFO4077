<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/preventionCard"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="40dp"
        app:cardElevation="4dp"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/preventionImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            app:tint="@color/grey4"
            android:src="@drawable/ic_stay_home"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/preventionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prevention 1"
        android:textSize="14sp"
        android:layout_below="@+id/preventionCard"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="@color/grey5"
        />
</RelativeLayout>