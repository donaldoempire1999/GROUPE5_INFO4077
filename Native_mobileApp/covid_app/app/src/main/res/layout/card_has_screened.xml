<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/hasScreenedName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="has screened name"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:gravity="left|center_vertical"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:id="@+id/hasScreenedPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="has screened phone"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:gravity="left|center_vertical"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/hasScreenedStatus"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="+"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/orange"
            android:textSize="15sp"
            android:textStyle="normal"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/hasScreenedInfoButton"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/transparent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            >
            <RelativeLayout
                android:id="@+id/hasScreenedInfoButtonClick"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_white"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
                >
                <ImageView
                    android:id="@+id/hasScreenedInfoButtonImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_info_24"
                    app:tint="@color/grey4"
                    android:alpha="1"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:background="@color/grey1"
        android:layout_alignParentTop="true"/>
</RelativeLayout>