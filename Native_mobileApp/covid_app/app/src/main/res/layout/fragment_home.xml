<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/topBarColor"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/grey0"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:overScrollMode="never"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="60dp"
            android:background="@color/grey0"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/topRelative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:cardElevation="0dp"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="@color/transparent"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_background_bottom_rounded"
                    android:padding="20dp">
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottieLogo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:lottie_rawRes="@raw/covid2"
                        app:lottie_loop="true"
                        android:scaleType="centerCrop"
                        app:lottie_autoPlay="true"
                        android:background="@drawable/gradient_light"
                        android:layout_alignParentTop="true"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/lottieLogo"
                        android:layout_toRightOf="@+id/lottieLogo"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/logoTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MODO"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:textStyle="bold|italic"
                            android:ellipsize="end"
                            android:maxLines="1"
                            />
                        <TextView
                            android:id="@+id/logoSubTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/logoTitle"
                            android:text="Covid-19 au Cameroun"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:textStyle="bold|italic"
                            android:ellipsize="end"
                            android:maxLines="1"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/middleRelative"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lottieLogo"
                        android:layout_marginTop="30dp"
                        >
                        <TextView
                            android:id="@+id/firstTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Avez vous l'air malade ? "
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:ellipsize="end"
                            android:maxLines="1"
                            />
                        <TextView
                            android:id="@+id/firstSubTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/firstTitle"
                            android:layout_marginTop="10dp"
                            android:text="Si vous ne vous sentez pas bien ou que vous semblez presenter certains symptomes du covid-19, s'il vous plait appelez nous ou envoyez nous un sms immediatement pour vous aider."
                            android:textSize="16sp"
                            android:textColor="@color/subWhite"
                            android:ellipsize="end"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/middleRelative"
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        >
                        <androidx.cardview.widget.CardView
                            android:id="@+id/callButton"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginEnd="10dp"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/transparent"
                            >
                            <RelativeLayout
                                android:id="@+id/callButtonClick"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ripple_light_red"
                                android:clickable="true"
                                android:focusable="true"
                                >
                                <ImageView
                                    android:id="@+id/callButtonIcon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginRight="2dp"
                                    android:layout_marginEnd="2dp"
                                    android:src="@drawable/ic_call"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    app:tint="@color/white"/>
                                <TextView
                                    android:id="@+id/callButtonText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@+id/callButtonIcon"
                                    android:layout_toRightOf="@+id/callButtonIcon"
                                    android:layout_centerVertical="true"
                                    android:text="Appel"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:maxLines="1"
                                    android:ellipsize="end"/>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/smsButton"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/callButton"
                            android:layout_toRightOf="@+id/callButton"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/transparent"
                            >
                            <RelativeLayout
                                android:id="@+id/smsButtonClick"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ripple_light_blue"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                >
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/ripple_light_blue"
                                    android:clickable="true"
                                    android:focusable="true"
                                    />
                                <ImageView
                                    android:id="@+id/smsButtonIcon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginRight="2dp"
                                    android:layout_marginEnd="5dp"
                                    android:src="@drawable/ic_sms"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    app:tint="@color/white"/>
                                <TextView
                                    android:id="@+id/smsButtonText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@+id/smsButtonIcon"
                                    android:layout_toRightOf="@+id/smsButtonIcon"
                                    android:layout_centerVertical="true"
                                    android:text="SMS"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:maxLines="1"
                                    android:ellipsize="end"/>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:id="@+id/bottomRelative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/topRelative"
                >
                <TextView
                    android:id="@+id/prevention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prevention"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/mainColor"
                    android:layout_marginBottom="10dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/preventionRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/prevention"
                    android:layout_centerHorizontal="true"
                    android:overScrollMode="never"
                    android:layout_margin="0dp"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/testRelative"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="9dp"
                    android:layout_below="@+id/preventionRecyclerView"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_background_rounded">
                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/testAnimation"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:scaleType="centerCrop"
                            app:lottie_loop="true"
                            app:lottie_autoPlay="true"
                            app:lottie_rawRes="@raw/test"
                            />
                        <TextView
                            android:id="@+id/testTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avez vous fait le test en ligne ?"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/white"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="20dp"/>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/testButton"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/transparent"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@+id/testTitle"
                            >
                            <RelativeLayout
                                android:id="@+id/testButtonClick"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/ripple_light"
                                android:clickable="true"
                                android:focusable="true"
                                >
                                <TextView
                                    android:id="@+id/testButtonText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="Demarrer le test"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginLeft="20dp"
                                    android:textColor="@color/white"
                                    android:textStyle="normal"
                                    android:textSize="16sp"
                                    android:maxLines="1"
                                    android:ellipsize="end"/>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/symptom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/testRelative"
                    android:text="Symptomes"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/mainColor"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/symptomRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/symptom"
                    android:layout_centerHorizontal="true"
                    android:overScrollMode="never"
                    android:layout_margin="0dp"/>
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>