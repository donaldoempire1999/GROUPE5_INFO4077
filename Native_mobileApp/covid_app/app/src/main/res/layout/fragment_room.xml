<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.RoomFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/topBarColor"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/grey0"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ScrollView
            android:id="@+id/room_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:overScrollMode="never"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="60dp"
                android:background="@color/grey0"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/topRelative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="0dp"
                    app:cardBackgroundColor="@color/transparent"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_background_bottom_rounded"
                        android:padding="20dp">
                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/lottieLogo"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:scaleType="centerCrop"
                            android:layout_alignParentTop="true"
                            app:placeholderImage="@drawable/ic_coronavirus_icon_app"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/lottieLogo"
                            android:gravity="center"
                            >
                            <TextView
                                android:id="@+id/logoTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="MODO"
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:textStyle="bold|italic"
                                android:ellipsize="end"
                                android:maxLines="1"
                                />
                            <TextView
                                android:id="@+id/logoSubTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/logoTitle"
                                android:text="Covid-19 au Cameroun"
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:textStyle="bold|italic"
                                android:ellipsize="end"
                                android:maxLines="1"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/middleRelative"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lottieLogo"
                            android:layout_marginTop="10dp"
                            >
                            <TextView
                                android:id="@+id/room_user_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="###"
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:ellipsize="end"
                                android:maxLines="1"
                                />
                        </RelativeLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <RelativeLayout
                    android:id="@+id/bottomRelative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/topRelative"
                    >
                    <TextView
                        android:id="@+id/prevention"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Messages du salon"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/mainColor"
                        android:layout_marginBottom="10dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/room_recycler_view_sms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/prevention"
                        android:layout_centerHorizontal="true"
                        android:overScrollMode="never"
                        android:layout_margin="0dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1000dp"
                        android:layout_alignParentBottom="true"
                        />
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="56dp"
        >
        <EditText
            android:id="@+id/room_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/edit_text_light_background"
            android:inputType="text"
            android:hint="Nouveau message"
            tools:ignore="UnusedAttribute"
            android:layout_toStartOf="@+id/room_send_message"
            android:layout_centerVertical="true"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/room_send_message"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/transparent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            >
            <RelativeLayout
                android:id="@+id/room_send_message_button_click"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_color_primary"
                android:clickable="true"
                android:focusable="true"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_send_24"
                    app:tint="@color/white"
                    android:scaleType="center"
                    android:layout_marginStart="3dp"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>