<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetInfoCitizen">
    <ScrollView
        android:id="@+id/citizenInfoScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/infoCitizenConstraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >
            <LinearLayout
                android:id="@+id/topSpace"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="vertical"
                />
            <TextView
                android:id="@+id/infoCitizen"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Informations sur le citoyen"
                android:maxLines="2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/topSpace"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/ripple_citizen"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <RelativeLayout
                android:id="@+id/infoCitizenRelativePicture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/infoCitizen"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/infoCitizenPictureCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="100dp"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardElevation="0dp"
                    >
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/infoCitizenPicture"
                        android:layout_width="230dp"
                        android:layout_height="150dp"
                        app:placeholderImage="@color/grey2"
                        android:scaleType="fitCenter"
                        app:roundAsCircle="true"
                        />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/infoCitizenFirstNameRelative"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/infoCitizenRelativePicture"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/infoCitizenFirstNameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Nom : "
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/infoCitizenFirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/infoCitizenFirstNameTitle"
                    android:layout_toEndOf="@+id/infoCitizenFirstNameTitle"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_centerVertical="true"
                    android:text="My name"
                    android:gravity="center_vertical"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/infoCitizenLastNameRelative"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/infoCitizenFirstNameRelative"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/infoCitizenLastNameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Prenom : "
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/infoCitizenLastName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/infoCitizenLastNameTitle"
                    android:layout_toEndOf="@+id/infoCitizenLastNameTitle"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_centerVertical="true"
                    android:text="My last name"
                    android:gravity="center_vertical"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/infoCitizenBornDateRelative"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/infoCitizenLastNameRelative"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/infoCitizenBornDateTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Date de nais. : "
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/infoCitizenBornDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/infoCitizenBornDateTitle"
                    android:layout_toEndOf="@+id/infoCitizenBornDateTitle"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_centerVertical="true"
                    android:text="00/00/0000"
                    android:gravity="center_vertical"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/infoCitizenGenreRelative"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/infoCitizenBornDateRelative"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/infoCitizenGenreTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Genre : "
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/infoCitizenGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/infoCitizenGenreTitle"
                    android:layout_toEndOf="@+id/infoCitizenGenreTitle"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_centerVertical="true"
                    android:text="Masculin"
                    android:gravity="center_vertical"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/infoCitizenCNIRelative"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/infoCitizenGenreRelative"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/infoCitizenCNITitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="CNI : "
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/infoCitizenCNI"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/infoCitizenCNITitle"
                    android:layout_toEndOf="@+id/infoCitizenCNITitle"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_centerVertical="true"
                    android:text="0"
                    android:gravity="center_vertical"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/infoCitizenPhoneRelative"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/infoCitizenCNIRelative"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/infoCitizenPhoneTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Tel : "
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/infoCitizenPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/infoCitizenPhoneTitle"
                    android:layout_toEndOf="@+id/infoCitizenPhoneTitle"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_centerVertical="true"
                    android:text="00000000"
                    android:textStyle="normal"
                    android:gravity="center_vertical"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/infoCitizenNationalityRelative"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/infoCitizenPhoneRelative"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/infoCitizenNationalityTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Nationalite : "
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/infoCitizenNationality"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/infoCitizenNationalityTitle"
                    android:layout_toEndOf="@+id/infoCitizenNationalityTitle"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_centerVertical="true"
                    android:text="\???"
                    android:gravity="center_vertical"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/infoCitizenButtonsRelative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/infoCitizenNationalityRelative"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="center"
                android:paddingTop="10dp"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/infoCitizenButtonClose"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/transparent"
                    app:layout_constraintLeft_toRightOf="@+id/infoCitizenButton"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    >
                    <RelativeLayout
                        android:id="@+id/infoCitizenButtonCloseClick"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_light_red"
                        android:clickable="true"
                        android:focusable="true"
                        >
                        <TextView
                            android:id="@+id/infoCitizenButtonCloseText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Fermer"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/white"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:maxLines="1"
                            android:ellipsize="end"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/bottomSpace"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@+id/infoCitizenButtonsRelative"
                android:orientation="vertical"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>