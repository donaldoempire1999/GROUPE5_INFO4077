<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AccountFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/topDark"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/grey0"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/accountScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:overScrollMode="never"
        android:background="@color/grey0"
        >
        <RelativeLayout
            android:id="@+id/bottomRelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:paddingBottom="30dp"
            >
            <RelativeLayout
                android:id="@+id/topRelative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginBottom="40dp"
                android:layout_centerHorizontal="true"
                >
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieLogo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:lottie_rawRes="@raw/covid2"
                    app:lottie_loop="true"
                    android:scaleType="centerCrop"
                    app:lottie_autoPlay="true"
                    android:background="@drawable/gradient_dark"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_below="@+id/lottieLogo"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/logoTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MODO"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/logoSubTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/logoTitle"
                        android:text="Covid-19 au Cameroun"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:gravity="center"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/middleRelative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lottieLogo"
                    android:layout_marginTop="30dp"
                    >
                    <TextView
                        android:id="@+id/firstTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Connexion"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:ellipsize="end"
                        android:maxLines="1"
                        />
                </RelativeLayout>
            </RelativeLayout>
            <EditText
                android:id="@+id/userName"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:textSize="16sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawableStart="@drawable/ic_baseline_person_24"
                android:background="@drawable/edit_text_light_background"
                android:inputType="textPersonName|textEmailAddress"
                android:hint="Nom ou adresse mail"
                android:layout_below="@+id/topRelative"
                android:drawableTint="@color/black"
                tools:ignore="UnusedAttribute" />
            <EditText
                android:id="@+id/password"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:textSize="16sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:background="@drawable/edit_text_light_background"
                android:inputType="textPassword"
                android:hint="Mot de passe"
                android:layout_below="@+id/userName"
                android:drawableTint="@color/black"
                tools:ignore="UnusedAttribute"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/connectionButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparent"
                android:layout_below="@+id/password"
                android:layout_centerHorizontal="true"
                >
                <RelativeLayout
                    android:id="@+id/testButtonClick"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_light_dark"
                    android:clickable="true"
                    android:focusable="true"
                    >
                    <TextView
                        android:id="@+id/connectionButtonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Connexion"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/white"
                        android:textStyle="normal"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:ellipsize="end"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>